<!DOCTYPE html>
<html>
<head>
  <title>New Post</title>
  <link rel="stylesheet" type="text/css" href="/assets/stylesheets/custom.css">
</head>
<body>
  <h1>New Post</h1>

  <%= form_with(model: [@user, @post], url: user_posts_path(@user)) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="field">
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>
    <%= form.submit "Create Post" %>
  <% end %>
</body>
</html>
