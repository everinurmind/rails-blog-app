<!DOCTYPE html>
<html>
<head>
  <title>All Users</title>
</head>
<body>
  <h1>All Users</h1>
  <ul class="user-list">
    <% @users.each do |user| %>
      <li>
  <% if user.photo.present? %>
    <%= link_to user_path(user), class: "user-preview" do %>
      <%= image_tag user.photo, class: "image" %>
      <div>
        <h2><%= user.name %></h2>
        <sub><%= user.bio %></sub>
      </div>
    <% end %>
  <% else %>
    <%= link_to user_path(user), class: "user-preview" do %>
      <div>
        <h2><%= user.name %></h2>
        <sub><%= user.bio %></sub>
      </div>
    <% end %>
  <% end %>
</li>
    <% end %>
  </ul>
</body>
</html>
